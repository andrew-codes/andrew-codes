{
  "ext": "ts tsx js jsx json env",
  "execMap": {
    "js": "yarn node --import=@nitrogql/esbuild-register",
    "ts": "yarn node --import=@nitrogql/esbuild-register"
  },
  "watch": [
    "nodemon.json",
    "./index.ts",
    "./server/*.*",
    "./app/**/*.server.ts",
    "./app/**/server/*.ts",
    "./*.ts",
    "./app/posts/**/*.*"
  ],
  "ignore": [
    "app/posts/**/d2/**/*.*"
  ],
  "env": {
    "NODE_ENV": "development"
  }
}
