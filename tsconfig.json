{
  "exclude": [
    "./cypress"
  ],
  "include": [
    "remix.env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "runtime-utils/*.js",
    "server.ts",
    "config/**/*.*",
    "scripts/*.ts",
    "server/**/*.ts"
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2019",
      "ES2021",
      "ESNext"
    ],
    "types": [
      "@types/react",
      "@types/node",
      "@types/react-dom",
      "@types/sha1",
      "@types/lodash"
    ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ESNext",
    "allowImportingTsExtensions": true,
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  }
}