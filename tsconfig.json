{
  "exclude": ["./cypress"],
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx", "staging-server/index.js"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019", "ES2021"],
    "types": ["@types/react", "@types/node", "@types/react-dom", "@types/styled-components", "@types/sha1", "@types/lodash"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "ES2020",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  }
}
